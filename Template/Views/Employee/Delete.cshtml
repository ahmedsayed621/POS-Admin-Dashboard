@model Template.BL.Models.EmployeeVM


@{
    ViewData["Title"] = "Details";
}


<br />

<center>
    <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">Back To Data</a>
    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
</center>

<br />

<h2>Details</h2>


<form asp-controller="Employee" asp-action="Delete" class="form-group">

    <label asp-for="Id">Id</label>
    <input type="hidden" class="form-control" asp-for="Id" />
    <br />


    <label asp-for="Name">Employee Name</label>
    <input type="text" class="form-control" asp-for="Name" disabled />
    <br />

    <label asp-for="Salary">Employee Salary</label>
    <input type="text" class="form-control" asp-for="Salary" disabled />
    <br />


    <label asp-for="Address">Employee Address</label>
    <input type="text" class="form-control" asp-for="Address" disabled />
    <br />

    <label asp-for="HireDate">Employee HireDate</label>
    <input type="text" class="form-control" asp-for="HireDate" disabled />
    <br />


    <label asp-for="Email">Employee Email</label>
    <input type="text" class="form-control" asp-for="Email" disabled />
    <br />


    <label asp-for="Notes">Employee Notes</label>
    <input type="text" class="form-control" asp-for="Notes" disabled />
    <br />


    <div class="demo-checkbox">
        <input type="checkbox" asp-for="IsActive" checked="" disabled>
        <label asp-for="IsActive">IsActive</label>
    </div>
    <br />


    <select asp-for="DepartmentId" asp-items="(SelectList)ViewBag.DepartmentList" disabled></select>

    <br />

    <input type="submit" value="Delete" class="btn btn-primary" />
</form>

